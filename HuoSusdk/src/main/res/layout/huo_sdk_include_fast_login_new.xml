<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/huo_sdk_ll_fast_login"
    android:layout_width="322dp"
    android:layout_height="220dp"
    android:layout_gravity="center"
    android:layout_marginLeft="@dimen/huo_sdk_activity_horizontal_margin"
    android:layout_marginRight="@dimen/huo_sdk_activity_horizontal_margin"
    android:background="@drawable/shape_corner_style4"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/huo_sdk_ll_loginLogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="9dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/huo_sdk_iv_logo"
            android:layout_width="80dp"
            android:layout_height="15dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/tv_divider"
            android:layout_width="1dp"
            android:layout_height="16dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@+id/huo_sdk_iv_logo"
            android:background="#fefefe" />

        <TextView
            android:id="@+id/tv_login_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@+id/tv_divider"
            android:text="正在登录..."
            android:textColor="#ffffff"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/huo_sdk_iv_fastLoading"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/huo_sdk_xs_loading" />
    </RelativeLayout>

    <View
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:layout_below="@+id/huo_sdk_ll_loginLogo"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="#dadada" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:text="欢迎回来"
        android:textColor="#ffffff"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/huo_sdk_tv_fastUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="21dp"
        android:text="456465167"
        android:textColor="#ff6905"
        android:textSize="15dp" />

    <Button
        android:id="@+id/btn_change_account"
        android:layout_width="114dp"
        android:layout_height="27dp"
        android:layout_gravity="center"
        android:layout_marginTop="23dp"
        android:background="@drawable/shape_corner_style1"
        android:gravity="center"
        android:text="切换账号"
        android:textColor="#ff6905"
        android:textSize="13dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="13dp"
        android:paddingRight="13dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="客服QQ：1733228649" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:text="官方交流群：603377150" />

    </LinearLayout>
</LinearLayout>